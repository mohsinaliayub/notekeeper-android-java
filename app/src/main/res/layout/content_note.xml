    <Spinner
        android:id="@+id/spinner_courses"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin" />

    <EditText
        android:id="@+id/text_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_courses"
        android:layout_alignStart="@id/spinner_courses"
        android:layout_alignEnd="@id/spinner_courses"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Note title"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/text_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_note_title"
        android:layout_alignStart="@id/spinner_courses"
        android:layout_alignEnd="@id/spinner_courses"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Note text"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

</RelativeLayout>